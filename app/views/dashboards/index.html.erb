
<div class="container mt-5 bg-light p-3">
  <div class="row">
    <div class="col-md-7">
      <h2 class="mb-4"><%= t('greetings') %> <%= current_user.name %></h2>
    </div>
    <div class="col-md-5">
      <div class="d-flex justify-content-end">
        <% if can?(:create, User) %>
          <%= button_to t('user_mailer.invite_user.title'), new_user_path, class: "btn btn-primary me-2", method: :get %>
        <% end %>
        <% if can?(:create, Project) %>
          <%= button_to t('project.create'), new_project_path, class: "btn btn-primary", method: :get %>
        <% end %>
      </div>
    </div>
  </div>
</div>
