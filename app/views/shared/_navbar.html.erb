<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light w-100" style="background-color: #1679AB; font-size: 1rem;">
  <!-- Container wrapper -->
  <div class="container">
    <a class="navbar-brand mx-auto text-white fw-bold fst-italic" href="/dashboards" style="font-size: 2rem; text-shadow: 2px 2px 4px #000000;">
      <%= @organization&.name %>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mx-auto">
        <% if current_user.role.name != 'general_user' %>
          <li class="nav-item me-3">
            <%= link_to t('home'), dashboards_path, class: "nav-link text-white" %>
          </li>
        <% end %>
        <% if can?(:create, User) %>
          <li class="nav-item me-3">
            <%= link_to t('user_mailer.invite_user.title'), new_user_path, class: "nav-link text-white" %>
          </li>
        <% end %>
        <% if can?(:create, Project) %>
          <li class="nav-item me-3">
            <%= link_to t('project.create'), new_project_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
      <div class="d-flex align-items-center ms-auto">
        <%= form_with url: search_path, method: :get, local: true, class: "d-flex" do %>
          <%= text_field_tag :query, params[:query], placeholder: "Search...", class: "form-control me-2", style: "width: 300px;" %>
          <button type="submit" class="btn btn-outline-light">
            <i class="fas fa-search"></i>
          </button>
        <% end %>
        <%= link_to user_path(current_user), class: "d-flex align-items-center text-white text-decoration-none ms-3" do %>
          <i class="fas fa-user-circle fa-2x text-white me-2"></i>
          <span class="text-white me-2"><%= current_user.name %></span>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Container wrapper -->
</nav>
<!-- Navbar -->