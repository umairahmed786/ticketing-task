<div class="container mt-4 p-4 bg-light">
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb mt-4 mb-4">
    <li class="breadcrumb-item"><%= link_to @project.title, project_path(@project) %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @issue.title %></li>
  </ol>
  </nav>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @issue.title %></h1>
    <div>
      <%= link_to edit_project_issue_path(@issue.project_id, @issue), class: 'btn btn-warning me-2' do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to project_issue_path(@issue.project_id, @issue), method: :delete, data: { confirm: t('confirmation_message') }, class: 'btn btn-danger' do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 mt-4 border">
      <p class="lead fw-bold fst-italic"><%= t('description') %></p>
      <p class="text-muted ms-3"><%= @issue.description %></p>

      <p class="lead fw-bold fst-italic"><%= t('issue_assignee') %>
        <span class="text-muted ms-3"><%= @issue.assignee.name %></span>
      </p>

      <p class="lead fw-bold fst-italic"><%= t('complexity_point') %>
        <span class="text-muted ms-3"><%= @issue.complexity_point %></span>
      </p>
      <p class="lead fw-bold fst-italic"><%= t('state') %>
        <span class="text-muted ms-3"><%= @issue.state %></span>
      </p>

      
    </div>
    <div class="col-md-5 mt-4 border">
      <p class="lead fw-bold fst-italic"><%= t('comments') %></p>
    </div>
  </div>
</div>

