<div class="container my-4">
  <!-- Issue Title and Description -->
  <div class="mb-4">
    <h1 class="display-3 font-weight-bold text-primary"><%= @issue.title %></h1>
    <p class="lead text-secondary"><%= @issue.description %></p>
    <p class="text-muted">
      <strong>State:</strong>
      <% case @issue.state %>
        <% when 'New' %>
          <span class="badge bg-success">New</span>
        <% when 'In Progress' %>
          <span class="badge bg-warning text-dark">In Progress</span>
        <% when 'Resolved' %>
          <span class="badge bg-info">Resolved</span>
        <% else %>
          <span class="badge bg-secondary">Unknown</span>
      <% end %>
    </p>
  </div>

  <!-- Assignee -->
  <div class="mb-4">
    <h3 class="h4 mb-2">Assignee</h3>
    <div class="alert alert-info">
      <% if @issue.assignee.present? %>
        <p class="mb-0"><%= @issue.assignee.name %></p>
      <% else %>
        <p class="mb-0"><%= t('issues.no_assigned') %></p>
      <% end %>
    </div>
  </div>

  <!-- Attached Files -->
  <div class="mb-4">
    <h3 class="h4 mb-2">Attached Files</h3>
    <div class="card">
      <div class="card-body">
        <%= render 'show_attachments' %>
      </div>
    </div>
  </div>

  <div class="container my-4">
  <!-- Comments -->
  <div class="mb-4">
    <h3 class="h4 mb-3">Comments</h3>
    <div class="card">
      <div class="card-body">
        <%= render 'comments/comment' %>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>

  <!-- Add Attachment -->
  <div class="mb-4">
    <%= render 'add_attachment' %>
  </div>

  <!-- Action Links -->
  <div class="mb-4">
    <div class="d-flex justify-content-between">
      <%= link_to "Edit", edit_project_issue_path(@issue.project_id, @issue), class: 'btn btn-primary btn-lg' %>
      <%= link_to "Destroy", project_issue_path(@issue.project_id, @issue),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this issue?" },
                  class: 'btn btn-danger btn-lg' %>
    </div>
  </div>
</div>
