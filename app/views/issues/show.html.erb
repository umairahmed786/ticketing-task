<div class="container my-4">
  <div class="row">
    <div class="col-md-3">
      <div class="card mb-4" style="display: flex; flex-direction: column; max-height: 250px;">
        <div class="card-header" style="flex-shrink: 0;">
          <h3 class="h4 mb-2">Attached Files</h3>
        </div>
        <div class="card-body" style="overflow-y: auto; flex-grow: 1;">
          <%= render 'show_attachments' %>
        </div>
      </div>

      <div class="card mb-4" style="display: flex; flex-direction: column; max-height: 450px;">
        <div class="card-header" style="flex-shrink: 0;">
          <h3 class="h4 mb-2">Issue History</h3>
        </div>
        <div class="card-body" style="overflow-y: auto; flex-grow: 1;">
          <%= render 'issue_history' %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card" style="min-height: 250px;">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h1 class="card-title mb-0"><%= @issue.title %></h1>
          <div class="d-flex">
            <%= link_to '#', class: 'btn btn-primary me-2', data: { bs_toggle: "modal", bs_target: "#addAttachmentModal" } do %>
              <i class="bi bi-paperclip"></i> 
            <% end %>
            <% if can?(:update, @issue) %>
              <%= link_to edit_project_issue_path(@issue.project_id, @issue), class: 'btn btn-warning me-2' do %>
                <i class="bi bi-pencil"></i> 
              <% end %>
            <% end %>
            <% if can?(:destroy, @issue) %>
              <%= link_to project_issue_path(@issue.project_id, @issue),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this issue?" },
                          class: 'btn btn-danger' do %>
                <i class="bi bi-trash"></i> 
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="card-body">
          <p class="lead text-secondary"><%= @issue.description %></p>

          <p class="text-muted">
            <strong>State:</strong>
            <% case @issue.state %>
              <% when 'new' %>
                <span class="badge bg-success">New</span>
              <% when 'in_progress' %>
                <span class="badge bg-warning text-dark">In Progress</span>
              <% when 'resolved' %>
                <span class="badge bg-info">Resolved</span>
              <% when 'closed' %>
                <span class="badge bg-info">Closed</span>
              <% else %>
                <span class="badge bg-secondary">Unknown</span>
            <% end %>
          </p>

          <p class="text-muted">
            <strong>Assignee:</strong>
            <% if @issue.assignee.present? %>
              <span class="text-info"><%= @issue.assignee.name %></span>
            <% else %>
              <span class="text-danger"><%= t('issues.no_assigned') %></span>
            <% end %>
          </p>
        </div>
      </div>

      <div class="card mb-4" style="margin-top: 20px; max-height: 450px;">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="h4 mb-3">Comments</h3>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">
            <i class="bi bi-chat-dots"></i> Add Comment
          </button>
        </div>
        <div class="card-body" style="overflow-y: auto;">
          <%= render 'comments/comment' %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'attachment_modal' %>
<%= render 'comment_modal' %>
