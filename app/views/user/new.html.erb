<div class="container mt-5 bg-light p-3">
<%= form_with model: @user, url: user_index_path, method: :post do |form| %>
  <div class="form-group mt-2">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>
  
  <div class="form-group mt-2">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>
  
  <div class="form-group mt-2">
    <%= form.label :password, "Assign Password" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>
  
  <div class="form-group mt-2">
    <%= form.label :role_id, "Assign Role" %>
    <%= form.select :role_id, options_for_select(@roles.map { |role| [role.name.humanize, role.id] }), {}, class: "form-control" %>
  </div>
  
  <%= form.hidden_field :organization_id, value: @organization.id %>
  
  <%= form.submit t('user.invitation'), class: "btn btn-primary" %>
<% end %>
</div>