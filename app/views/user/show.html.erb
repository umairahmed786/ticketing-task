<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h1 class="h3 mb-0 text-center"><%= t('edit_profile') %></h1>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 text-center">
              <%= image_tag "profile_icon.jpg", alt: "Profile Icon", class: "img-fluid rounded-circle mb-3 mt-5" %>
              <h4><%= @current_user.name %></h4>
            </div>
            <div class="col-md-8">
               <%= render 'form', user: @current_user %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>