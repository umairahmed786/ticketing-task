<div class="container mt-5 p-4 bg-light w-50">
  <div class="text-center mt-4">
    <h2><%= t('login_account') %></h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, "#{t('email')} <span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
      <%= f.text_field :email, placeholder: "Email", class: 'form-control', autofocus: true, autocomplete: "email", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :password, "#{t('password')} <span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
      <%= f.password_field :password, placeholder: "Password", class: 'form-control', autocomplete: "current-password", required: true %>
    </div>
    <div class="mb-3 text-center">
      <%= f.submit t('login'), class: 'btn btn-primary px-5 py-2' %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>

