<div class="container table-responsive">
  <% if @projects.empty? %>
    <div class="min-vh-100 d-flex align-items-center justify-content-center ">
      <img src="<%= asset_path('no_record_found.gif') %>" alt="No data found" class="img-fluid">
    </div>
  <% else %>
    <table class="table mt-5 table-hover table-striped">
      <thead>
        <tr>
          <th scope="col"><%= t('title') %></th>
          <th scope="col"><%= t('project.project_manager') %></th>
          <th scope="col"><%= t('project.admin') %></th>
          <th scope="col"><%= t('no_of_issues') %></th>
          <th scope="col"><%= t('no_of_users') %></th>
          <th scope="col"><%= t('actions') %></th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @projects.find_each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= @project_project_managers[project.id] %></td>
            <td><%= @project_admins[project.id] %></td>
            <td><%= @project_issues_count[project.id] %></td>
            <td><%= @project_users_count[project.id] %></td>

            <td>
              <%= link_to project_path(project), class: 'btn btn-primary btn-sm', title: 'Show', data: { toggle: 'tooltip' } do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <% if current_user.role.name == ('owner' || 'admin')%>
                <%= link_to edit_project_path(project), class: 'btn btn-warning btn-sm', title: 'Edit', data: { toggle: 'tooltip' } do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to project_path(project), method: :delete, data: { confirm: t('confirm_delete_with_details_project'), toggle: 'tooltip' }, class: 'btn btn-danger btn-sm', title: 'Delete' do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
              <%= link_to project_issues_path(project), data: { toggle: 'tooltip' }, class: 'btn btn-secondary btn-sm', title: 'Issues' do %>
                <i class="fas fa-bug"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @projects, renderer: BootstrapPaginationRenderer %>
  <% end %>
</div>

<script>
  // Initialize Bootstrap tooltips
  document.addEventListener('DOMContentLoaded', function () {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
  });
</script>