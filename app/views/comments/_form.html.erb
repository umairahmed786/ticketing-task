<h2>Add a Comment</h2>

<%= form_with( url: project_issue_comments_path(@project, @issue), local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :files, "Attach a file" %>
    <%= form.file_field :files, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>
