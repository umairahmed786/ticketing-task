<%= form_with(model: Comment, url: project_issue_comments_path(@project, @issue), local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :files, "Attach a file" %>
    <%= form.file_field :files, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group d-flex justify-content-end mt-3">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>
