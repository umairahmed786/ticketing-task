<h2>Add a Comment</h2>

<%= form_with(model: @comment, url: project_issue_comments_path(@project, @issue)) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3, class: "form-control" %>
    
  </div>

  <div class="form-group">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>